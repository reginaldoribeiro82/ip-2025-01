Algoritmo "Exercicio 18"

Var

   valor_ini, razao:real
   num_ele:inteiro
   contador: inteiro
   soma:real

Inicio

   Escreval("Digite o valor inicial da progressão aritmética")
   leia(valor_ini)
   Escreval("Digite a razão da progressão artitmética")
   leia(razao)
   Escreval("Digite o número de elementos da progressão")
   leia (num_ele)
   
   soma <- 0
   contador <- 1
   enquanto num_ele >= contador faca
   Soma <- Soma + valor_ini + razao*(contador - 1)
   contador <- contador + 1
   
   fimenquanto

   Escreval("O VALOR DA SOMA É ", soma)
Fimalgoritmo
