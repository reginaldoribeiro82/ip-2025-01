Algoritmo "Exercicio 03"

Var

   n1,n2,n3 : inteiro
   n1_cent,n2_cent,n3_cent : inteiro
   n_total, n_quadrado : real

Inicio

   escreval("Digite o número 01")
   leia (n1)
   escreval("Digite o número 02")
   leia (n2)
   escreval ("Diigte o número 03")
   leia (n3)
   
   n1_cent <- n1 * 100
   n2_cent <- n2 * 10
   n3_cent <- n3 * 1
   n_total <- n1_cent + n2_cent + n3_cent
   n_quadrado <- n_total ^ 2
   
   Escreval(n1,n2,n3,",",n_quadrado)
   
   
Fimalgoritmo
